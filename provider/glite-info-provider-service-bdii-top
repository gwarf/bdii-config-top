CONFIG=/etc/bdii/gip/etc/glite-info-service-bdii-top.conf
TEMPLATE=/etc/glite/info/service/glite-info-service-bdii-top.conf.template
SCRIPT=/usr/bin/glite-info-service
DEFAULTS=/etc/bdii/gip/glite-info-site-defaults.conf

# Check for the existence of the configuration file.
if [ -f ${DEFAULTS} ]; then
    source ${DEFAULTS}
fi

SITE_NAME=${SITE_NAME:-$(hostname -d) }
export BDII_HOST

# Check for the existence of the configuration file.
if [ ! -f ${CONFIG} ]; then

   # Check for the existence of the template.
    if [ ! -f ${TEMPLATE} ]; then
        echo "Error: The template file ${TEMPLATE} does not exist." 1>&2
	exit 1
    else
	${SCRIPT} ${TEMPLATE} ${SITE_NAME}
    fi 
else

${SCRIPT} ${CONFIG} ${SITE_NAME}

fi


